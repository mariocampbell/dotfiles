[alias]
	co = checkout
	st = status
	ci = commit
	br = branch
	d = diff
	dn = diff --name-only
[core]
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
# diff tool
[difftool]
	prompt = true
[diff]
	tool = nvimdiff
	colorMoved = default
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
# merge tool
[mergetool "nvim"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
	tool = nvim
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[delta]
	# plus-style = "syntax #012800"
	# minus-style = "syntax #340001"
	# plus-emph-style = "syntax bold #003800"
	# minus-emph-style = "syntax bold #320001"
	theme = "Dracula"
	true-color = "always"
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true
